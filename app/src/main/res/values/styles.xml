<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainLayout_Land">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/primary_dark_material_dark</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/textView_padding</item>
    </style>

    <style name="mainLayout_Portrait" parent="mainLayout_Land">

    </style>

    <style name="topLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="level2LinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="level2LinearLayoutL" parent="level2LinearLayout">
        <item name="android:layout_width">0dp</item>
   </style>

    <style name="textView2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/textView_padding</item>
    </style>

    <style name="team_score">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/textView_padding</item>
        <item name="android:textSize">@dimen/text_size_score</item>
    </style>

    <style name="tableScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/tablePadding</item>
    </style>

    <style name="tableScoreL" parent="tableScore">
        <item name="android:shrinkColumns">1,4</item>
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="tableButtonsLand">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">*</item>
    </style>
    <style name="cell_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">1</item>
        <item name="android:padding">@dimen/textView_padding</item>
        <item name="android:textSize">@dimen/table_text_size</item>
   </style>

    <style name="cell_label_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/textView_padding</item>
        <item name="android:textSize">@dimen/table_text_size</item>
   </style>

    <style name="cell_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/textView_padding</item>
        <item name="android:textSize">@dimen/table_text_size</item>
    </style>

    <style name="cell_value_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/textView_padding</item>
        <item name="android:textSize">@dimen/table_text_size</item>
    </style>

    <style name="score_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/row_margin</item>
    </style>

    <style name="reset_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">@dimen/divider</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="CustomTheme1" parent="android:Theme.DeviceDefault">
        <item name="android:textColorPrimary">?android:attr/textColorPrimary</item>
    </style>
</resources>
